<!--pages/explore/explore.wxml-->
<view class="page">
  <view class="rp-userInfo">
    <open-data type="userAvatarUrl" class="rp-avatar"></open-data>
    <open-data type="userNickName" class="rp-nickname"></open-data>
  </view>
  <view class="page__bd" class="rp-grids">
    <view class="weui-grids">
      <block wx:for="{{grids}}" wx:key="key">
        <navigator url="{{item.pagePath}}" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="{{item.iconPath}}" />
          <view class="weui-grid__label">{{item.text}}</view>
        </navigator>
      </block>
    </view>
  </view>
</view>
